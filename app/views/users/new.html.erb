<div class="main-users-new">
  <div class="form-heading">新規ユーザー登録</div>
    <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
    <% end %>
    <%= form_tag("/users/create") do %>
    <div class="form-body">
      <p>ユーザー名</p>
      <input type="text" name="name" value="<%= @user.name %>" autocomplete="off">
      <p>メールアドレス</p>
      <input type="text" name="email" value="<%= @user.email %>"autocomplete="off">
      <p>ログイン用パスワードを設定してください</p>
      <p><small>（数字4文字以上８文字以下で設定可能）</p>
      <input type="text" name="password" value="<% @user.password %>"autocomplete="off">
      </form>
      <input type="submit" value="新規登録">
    </div>
      <% end %>
  </div>
</div>