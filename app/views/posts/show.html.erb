<div class="posts-show-item">
  <div class="form-heading">
  <p>詳細画面</p>
  </div>
  <div class="post-shows">
  <%= simple_format(@post.content) %>
  <div class="post-shows-time">
  <br><br><%= l @post.created_at %>
</div>
</div>
</div>

<div class="post-menus">
  <button><%= link_to("編集", "/posts/#{@post.id}/edit") %></button>
  <button><%= link_to("一覧へ", "/posts/personal") %></button>
  <button><%= link_to("削除","/posts/#{@post.id}/destroy", method: :post) %></button>
</div>

